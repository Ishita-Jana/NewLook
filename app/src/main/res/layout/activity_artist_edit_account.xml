<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editaccountartist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artist.activity.ArtistEditAccountActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/glacial_iindiference"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#80807F"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/glacial_iindiference"
            android:gravity="center"
            android:text="Edit Account"
            android:textColor="#80807F"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/glacial_iindiference"
            android:gravity="center"
            android:text="Save"
            android:textColor="#80807F"
            android:textSize="16dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicEdit"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_indifference_regular"
                    android:text="Change Profile"
                    android:gravity="center"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:orientation="vertical"
                android:paddingHorizontal="50dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Name"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingVertical="10dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Bio"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Skills"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Categories"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Avg Response Time"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistResponseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:text="Charges"
                        android:textColor="#80807F"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/artistCharges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:minHeight="50dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:text="Upload Images of Your Collections" />

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/browseCollections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="30dp"

                    android:text="Browse Collections"
                    android:textColor="@color/black" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>