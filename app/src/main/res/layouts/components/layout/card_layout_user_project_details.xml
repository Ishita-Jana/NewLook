<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/cardLayoutOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"

        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/customer_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="1"
            android:src="@drawable/artist_home"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minakshi"
                android:fontFamily="@font/glacial_iindiference"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_indifference_regular"
                    android:text="Type : "
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/customize_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoe"
                    android:textSize="17dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/textview_outline"/>
            </LinearLayout>
            <TextView
                android:id="@+id/customer_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:textSize="17dp"
                android:fontFamily="@font/glacial_indifference_regular"
                android:text="29th Nov 2023"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/artist_response"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/artist_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_outline"
                android:text="Accept"
                android:visibility="visible"
                android:paddingHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:backgroundTint="@color/blue"
                />
            <TextView
                android:id="@+id/artist_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_outline"
                android:text="Reject"
                android:visibility="visible"
                android:paddingHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:backgroundTint="@color/babyBlue"
                />
            <ImageView
                android:id="@+id/clock_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"

                android:src="@drawable/timeline_clock"

                />
            <ImageView
                android:id="@+id/prohibition"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"

                android:src="@drawable/prohibition"

                />
            <ImageView
                android:id="@+id/delivered"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"

                android:src="@drawable/tick"

                />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

